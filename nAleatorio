#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(void) {
  srand(time(NULL));
  int opcao, numAleatorio;
  printf("Digite 1 para criar um número aleatório: ");
  scanf("%d", &opcao);

  switch (opcao) {
    int numAleatorio = 0;
  case 1:
    numAleatorio = rand();
    printf("Valor gerado: %d", numAleatorio);
  }

  return 0;
}
